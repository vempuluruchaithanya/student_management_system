@model MVC_StudentManagementSystem.Models.DTO.StudentDto
@{
}


<h1 class="mt-3">Edit Student</h1>

@if (Model is not null)
{
    <form method="post" class="mt-3">

    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly/>
    </div>
        <div class="mt-3">
            <label class="form-label">FirstName</label>
            <input type="text" class="form-control" asp-for="FirstName" />
        </div>

     <div class="mt-3">
         <label class="form-label">LastName</label>
        <input type="text" class="form-control" asp-for="LastName" />
     </div>

     <div class="mt-3">
        <label class="form-label">ContactNo</label>
        <input type="text" class="form-control" asp-for="ContactNo" />
    </div>
     <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>
    <div class="mt-3">
         <label class="form-label">CreatedOn</label>
        <input type="text" class="form-control" asp-for="CreatedOn" />
    </div>
     <div class="mt-3">
         <label class="form-label">ModifiedOn</label>
        <input type="text" class="form-control" asp-for="ModifiedOn" />
    </div>

    <div class accesskey=" "mt-3 d-flex justify-contetn-between">
        <button type="submit" class="btn btn-primary">Save</button>

        <button type="submit" asp-controller="Students"
        asp-action="Delete"
        class="btn btn-danger">Delete</button>
    </div>

    </form>
}